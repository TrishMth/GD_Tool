struct PS_INPUT
{
	float4 vPosition : SV_POSITION;
	//float4 vColor : COLOR;


};

//--------------------------------------------------------------------------------------
// Pixel Shader
//--------------------------------------------------------------------------------------
float4 PSMain( PS_INPUT Input ) : SV_TARGET
{

	
    	float y = Input.vPosition.y;
		(y+1)/2;
    	float4 vDiffuse = float4(y, 1-y, 0,1);
		
    
	return vDiffuse;
}